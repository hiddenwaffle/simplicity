{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
